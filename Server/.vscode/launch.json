    "version": "0.2.0",
    "configurations": [
        {
          "name": "Debug Flask Server",
          "type": "debugpy",
          "request": "launch",
          "module": "flask",
          "env": { "FLASK_APP": "${workspaceFolder}/../Server/Server.py", "FLASK_DEBUG": "1" },
          "args": ["run", "--no-debugger", "--no-reload"],
          "jinja": true,
          "cwd": "${workspaceFolder}/.."
        }
    ]
}
